@using CarInsurance22.ViewModel
@model List<CarInfo22Vm>
<div class="row no-gutters col-sm-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="=m-0">Insurance Quote</h5>
        </div>
          <div class="card-body">
                @foreach (var carinfo22vm in Model)
                {
                    using (Html.BeginForm("unsubscribe", "Admin", FormMethod.Post))
                    {
                        <input type="hidden" name="id" value="@carinfo22vm.id"/>
                        <div class="row">
                         <div class="col">
                           @carinfo22vm.FirstName
                         </div>
                  <div class="col">
                      @carinfo22vm.LastName
                  </div>
                  <div class="col">
                      @carinfo22vm.EmailAddress
                  </div>
                  <div class="col">
                      @carinfo22vm.CarTotal
                  </div>
                  <div class="col">
                      <button type="submit" class="btn btn-danger btn-block">
                          Unsubscribe
                      </button>
                  </div>
              </div>

                  }
                  }
              </div>
      </div>
  </div>



